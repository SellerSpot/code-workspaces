{
  "autorun": false,
  "autoKill": true,
  "terminals": [
    {
      "name": "database-models",
      "cwd": "../../database-models",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "universal-types",
      "cwd": "../../universal-types",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "universal-functions",
      "cwd": "../../universal-functions",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "proxy-server",
      "cwd": "../../proxy-server",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "auth-server",
      "cwd": "../../auth-server",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "core-server",
      "cwd": "../../core-server",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "catalogue-server",
      "cwd": "../../catalogue-server",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "pos-server",
      "cwd": "../../pos-server",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },
    {
      "name": "ecom-server",
      "cwd": "../../ecom-server",
      "open": true,
      "onlyMultiple": true,
      "command": "npm run dev"
    },

    {
      "name": "Git pull upstream master",
      "commands": [
        "git -C ../../code-workspaces pull upstream master",
        "git -C ../../database-models pull upstream master",
        "git -C ../../universal-types pull upstream master",
        "git -C ../../universal-functions pull upstream master",
        "git -C ../../proxy-server pull upstream master",
        "git -C ../../auth-server pull upstream master",
        "git -C ../../core-server pull upstream master",
        "git -C ../../catalogue-server pull upstream master",
        "git -C ../../pos-server pull upstream master",
        "git -C ../../ecom-server pull upstream master",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },

    {
      "name": "Git pull origin master",
      "commands": [
        "git -C ../../code-workspaces pull origin master",
        "git -C ../../database-models pull origin master",
        "git -C ../../universal-types pull origin master",
        "git -C ../../universal-functions pull origin master",
        "git -C ../../proxy-server pull origin master",
        "git -C ../../auth-server pull origin master",
        "git -C ../../core-server pull origin master",
        "git -C ../../catalogue-server pull origin master",
        "git -C ../../pos-server pull origin master",
        "git -C ../../ecom-server pull origin master",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },

    {
      "name": "Git push all",
      "commands": [
        "git -C ../../code-workspaces push --all",
        "git -C ../../database-models push --all",
        "git -C ../../universal-types push --all",
        "git -C ../../universal-functions push --all",
        "git -C ../../proxy-server push --all",
        "git -C ../../auth-server push --all",
        "git -C ../../core-server push --all",
        "git -C ../../catalogue-server push --all",
        "git -C ../../pos-server push --all",
        "git -C ../../ecom-server push --all",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },

    {
      "name": "Npm install",
      "commands": [
        "npm ci --prefix ../../database-models || npm install --prefix ../../database-models",
        "npm ci --prefix ../../universal-types || npm install --prefix ../../universal-types",
        "npm ci --prefix ../../universal-functions || npm install --prefix ../../universal-functions",
        "npm ci --prefix ../../proxy-server || npm install --prefix ../../proxy-server",
        "npm ci --prefix ../../auth-server || npm install --prefix ../../auth-server",
        "npm ci --prefix ../../core-server || npm install --prefix ../../core-server",
        "npm ci --prefix ../../catalogue-server || npm install --prefix ../../catalogue-server",
        "npm ci --prefix ../../pos-server || npm install --prefix ../../pos-server",
        "npm ci --prefix ../../ecom-server || npm install --prefix ../../ecom-server",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },

    {
      "name": "Yalc link all",
      "commands": [
        "npm run yalc:link --prefix ../../database-models",
        "npm run yalc:link --prefix ../../universal-types",
        "npm run yalc:link --prefix ../../universal-functions",
        "npm run yalc:link --prefix ../../auth-server",
        "npm run yalc:link --prefix ../../core-server",
        "npm run yalc:link --prefix ../../catalogue-server",
        "npm run yalc:link --prefix ../../pos-server",
        "npm run yalc:link --prefix ../../ecom-server",
        "exit"
      ],
      "onlySingle": true,
      "open": true
    },

    {
      "name": "Kill all ports",
      "commands": ["npx kill-port 4500 4501 4502 4503 4504 4505 4506", "exit"],
      "onlySingle": true,
      "open": true,
      "envInherit": true
    }
  ]
}
